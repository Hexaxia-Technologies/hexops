      "port": 3000,
      "category": "Product",
      "scripts": {
        "dev": "pnpm dev",
        "build": "pnpm build"
      }
    },
    {
      "id": "api-server",
      "name": "API Server",
      "description": "Backend API service",
      "path": "/path/to/api-server",
      "port": 4000,
      "category": "Internal",
      "scripts": {
        "dev": "npm run dev",
        "build": "npm run build"
      },
      "holds": [
        "package-to-skip-updates"
      ]
    }
